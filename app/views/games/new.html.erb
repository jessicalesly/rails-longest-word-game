<h1>Longest word</h1>
<div class="letters">
  <% @random_letters.each do |letter| %>
    <div class="letter"><%= letter %></div>
  <% end %>
</div>
<p>Find the longest word in the grid</p>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="word" placeholder="Your answer">
  <input id="a" name="letters_string" value="<%= @random_letters.join %>" type="hidden" />
  <input type="submit" value="Submit">
</form>
